<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body
    class="w-full min-h-screen bg-zinc-900 text-white p-5 flex flex-col gap-5"
  >
    <h1 class="text-xl capitalize">Hello <%= result.name %> ðŸ‘‹</h1>
    <a href="/logout">
      <button class="bg-red-700 p-1 rounded-md w-1/16 cursor-pointer">
        Logout
      </button>
    </a>
    <form
      action="/post/create"
      method="post"
      class="inline-flex flex-col gap-5 w-1/3"
    >
      <textarea
        class="resize-none bg-zinc-800 p-5 rounded-md outline-none"
        placeholder="Whats on your mindðŸ§ ?"
        cols="30"
        rows="5"
        name="content"
        id=""
      ></textarea>
      <input
        class="px-3 py-1 bg-blue-500 rounded-md w-1/4 cursor-pointer"
        type="submit"
      />
    </form>

    <h1 class="text-2xl">All Posts</h1>

    <!-- All post -->
     
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-7">
      <% allPost.forEach(post => { %>
      <div
        class="bg-yellow-500 p-5 flex flex-col justify-evenly gap-5 rounded-md"
      >
        <h3 class="text-black font-italic">@<%= post.user.name %></h3>
        <p><%= post.content %></p>
        <div>
          <button class="bg-blue-700 p-1 rounded-md w-1/4 cursor-pointer">
            Like
          </button>
          <% if (post.user.email===result.email) { %>
            <a href="/post/delete/<%= post._id %>">
              <button class="bg-red-700 p-1 rounded-md w-1/4 cursor-pointer">
                Delete
              </button>
            </a>
          <% } %>
        </div>
      </div>
      <% }) %>
    </div>
  </body>
</html>
